<!-- rectangle_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#CCCCCC"/>  <!-- Example: light gray color -->

    <!-- Border color and width -->
    <stroke
        android:width="1dp"
        android:color="#000000"/>  <!-- Example: black border -->

    <!-- Rounded corners -->
    <corners android:radius="8dp"/>  <!-- Example: 8dp rounded corners -->
</shape>
